---
    title: Contact Us
    hasCTA: false
    hasSubHero: true
---
{% extends "boilerplate/base.njk" %}

{% block links %}
{% endblock %}


{% block content %}
    <section class="section">
        <div class="container blockedSection bgContrast2 spread">
            <h2>How Can We Help You?</h2>
            <div class="-l-2col-2 ">
                <form class="container -form-2" action="">
                    <div class="inputContainer -inputContainer-2">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name">
                    </div>
                    <div class="group">
                        <div class="inputContainer -inputContainer-2">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email">
                        </div>
                        <div class="inputContainer -inputContainer-2">
                            <label for="phone">Phone Number</label>
                            <input type="tel" name="phone" id="phone">
                        </div>
                    </div>
                    <div class="inputContainer -inputContainer-2">
                        <label for="message">Message</label>
                        <textarea name="message" id="message"></textarea>
                    </div>
                    <button class="-b-spec-3">Submit</button>
                </form>

                <div class="container">
                    <div class="-card-info1"></div>
                    <div class="-card-info1"></div>
                    <div class="-card-info1"></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}