            class: "-b-spec-3"
            text: "Request a Free Quote"
            href: "/contact#form"
        img:
          imgType: "imgWrapper"
          src: "/assets/Wendall_Hughes.png"
          alt: "Wendall Hughes, Owner of Hughes Home Services Ottawa"
          wrapperClass: "-f-imgBacksplash"
  - id: "about"
    class: "bgContrast2"
    sectionItems:
    - type: "layout"
